{
  "name": "@zettabrasil/petshop-especies",
  "version": "0.2.3",
  "description": "Relação de espécies e raças",
  "main": "index.js",
  "scripts": {
    "commit": "git-cz",
    "release": "standard-version",
    "postinstall": "husky install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/zettabrasil/petshop-especies.git"
  },
  "keywords": [
    "especies",
    "racas",
    "petshop",
    "zettabrasil"
  ],
  "author": "Zettabrasil",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zettabrasil/petshop-especies/issues"
  },
  "homepage": "https://github.com/zettabrasil/petshop-especies#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^6.0.0",
    "standard-version": "^9.3.0"
  },
  "directories": {
    "lib": "lib"
  }
}
